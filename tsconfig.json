{
    /* Visit https://www.typescriptlang.org/docs/handbook/compiler-options.html to read more about this file */

    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2018",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "build" // Place all compiled files in this folder, according to their nesting in the source
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".vscode"]
}
