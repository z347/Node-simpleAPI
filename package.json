{
    "name": "server",
    "version": "1.0.0",
    "description": "API - simple online store",
    "private": false,
    "url": "https://github.com/z347/TypeScript-Node-testTask-chatBotsStudio",
    "author": "Shylo Volodymyr",
    "engines": {
        "node": "12.6.2",
        "npm": "6.14.4"
    },
    "main": "./src/app.ts",
    "scripts": {
        "start": "node --inspect=5858 -r ts-node/register ./src/app.ts",
        "start:watch": "nodemon",
        "lint:check": "eslint . --ext .ts --color",
        "lint:fix": "eslint . --ext .ts --fix --color",
        "prettier:check": "prettier --check **/*.{ts,json}",
        "prettier:fix": "prettier --write **/*.{ts,json}",
        "compilation:typescript": "tsc"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts)": [
            "npm run lint:fix",
            "git add"
        ]
    },
    "dependencies": {
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.8",
        "@types/node": "^14.11.8",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "eslint": "^7.11.0",
        "eslint-config-airbnb-typescript": "^11.0.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "nodemon": "^2.0.5",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    }
}
